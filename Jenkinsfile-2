pipeline {
  agent none
  stages {
    stage('Back-end') {
      agent {
        docker { image 'maven:3.8.1-adoptopenjdk-11' }
      }
      steps {
        sh 'mvn --version'
      }
    }
    stage('Front-end') {
      agent {
        docker { image 'node:16-alpine' }
      }
      steps {
        sh 'node --version'
      }
    }
    stage('Anchore test') {
      agent {
        docker { image 'anchore/grype:latest' }
      }
      steps {
        sh 'docker run -it --rm anchore/grype:latest alpine:latest'
      }
    }
  }
}
